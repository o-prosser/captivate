{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/assets/*": ["./app/_assets/*"],
      "@/components/*": ["./app/_components/*"],
      "@/lib/*": ["./app/_lib/*"],
      "@/models/*": ["./app/_models/*"],
      "@/ui/*": ["./app/_ui/*"],
      "@/util/*": ["./app/_util/*"],
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "remark-mhchem.mjs"
  ],
  "exclude": ["node_modules"]
}
